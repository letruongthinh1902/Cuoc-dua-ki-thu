<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textviewDiemSo"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="#E8A807"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Ty le: 1:3"
        android:textColor="#C30808"
        android:layout_marginLeft="110dp"
        android:paddingTop="30dp"/>
    <EditText
        android:id="@+id/edittextNhapCuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nhap muc cuoc"
        android:paddingLeft="10dp"
        android:inputType="number"
        android:textSize="25sp"
        android:layout_below="@+id/textviewDiemSo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/e" />
    </LinearLayout>
    <CheckBox
        android:id="@+id/checkboxThree"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/checkboxTwo"
        android:layout_above="@+id/checkboxThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/checkboxOne"
        android:layout_above="@+id/checkboxTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/checkboxFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkboxOne" />

    <SeekBar
        android:id="@+id/seekbarThree"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/checkboxThree"
        android:max="30"
        android:progressDrawable="@null"
        android:thumb="@drawable/a" />
    <SeekBar
        android:id="@+id/seekbarTwo"
        android:thumb="@drawable/b"
        android:layout_toRightOf="@+id/checkboxTwo"
        android:progressDrawable="@null"
        android:layout_above="@+id/seekbarThree"
        android:max="30"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <SeekBar
        android:id="@+id/seekbarOne"
        android:thumb="@drawable/c"
        android:layout_toRightOf="@+id/checkboxOne"
        android:layout_above="@+id/seekbarTwo"
        android:max="30"
        android:progressDrawable="@null"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <SeekBar
        android:id="@+id/seekbarFor"
        android:thumb="@drawable/d"
        android:layout_toRightOf="@+id/checkboxFor"
        android:layout_above="@+id/seekbarOne"
        android:max="30"
        android:progressDrawable="@null"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <ImageButton
        android:id="@+id/buttonPlay"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:src="@drawable/play"/>
</RelativeLayout>